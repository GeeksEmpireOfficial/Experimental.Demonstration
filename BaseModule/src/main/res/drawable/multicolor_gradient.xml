<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:height="1280dp"
        android:width="720dp">

        <shape
            android:shape="rectangle">

            <solid
                android:color="@color/default_color_dark"/>

        </shape>

    </item>

    <item>

        <shape
            android:shape="rectangle">


            <gradient
                android:type="radial"
                android:gradientRadius="720dp"
                android:useLevel="false"
                android:startColor="#E88F6180"
                android:endColor="@color/transparent"
                android:centerY="0"
                android:centerX="1"
                android:angle="45" />
        </shape>

    </item>

    <item
        android:gravity="top|start">

        <shape
            android:shape="rectangle">

            <gradient
                android:type="radial"
                android:gradientRadius="720dp"
                android:useLevel="false"
                android:startColor="#CC3AAD96"
                android:endColor="@color/transparent"
                android:centerY="0"
                android:centerX="0"
                android:angle="135" />
        </shape>

    </item>

</layer-list>
