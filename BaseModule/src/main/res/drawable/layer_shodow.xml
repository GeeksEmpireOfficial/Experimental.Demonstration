<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:id="@+id/backgroundLayer"
        android:width="132dp"
        android:height="132dp">

        <shape
            android:shape="oval"/>
        <color android:color="@color/transparent" />

    </item>

    <item>
        <shape android:shape="oval">
            <padding
                android:bottom="1dp"
                android:left="1dp"
                android:right="1dp"
                android:top="1dp" />
            <solid android:color="#00CCCCCC" />
            <corners android:radius="51dp" />
        </shape>
    </item>
    <item>
        <shape android:shape="oval">
            <padding
                android:bottom="1dp"
                android:left="1dp"
                android:right="1dp"
                android:top="1dp" />
            <corners android:radius="51dp" />
            <solid android:color="#10CCCCCC" />
        </shape>
    </item>
    <item>
        <shape android:shape="oval">
            <padding
                android:bottom="1dp"
                android:left="1dp"
                android:right="1dp"
                android:top="1dp" />
            <solid android:color="#20CCCCCC" />
            <corners android:radius="51dp" />
        </shape>
    </item>
    <item>
        <shape android:shape="oval">
            <padding
                android:bottom="1dp"
                android:left="1dp"
                android:right="1dp"
                android:top="1dp" />
            <solid android:color="#30CCCCCC" />
            <corners android:radius="51dp" />
        </shape>
    </item>
    <item>
        <shape android:shape="oval">
            <padding
                android:bottom="1dp"
                android:left="1dp"
                android:right="1dp"
                android:top="1dp" />
            <solid android:color="#50CCCCCC" />
            <corners android:radius="51dp" />

        </shape>
    </item>

    <item>

        <shape android:shape="oval">
            <solid android:color="#D6D6D6" />
            <corners android:radius="51dp" />

        </shape>

    </item>









    <item
        android:width="132dp"
        android:gravity="start">

        <shape android:shape="oval">
              <gradient
                android:type="radial"
                android:gradientRadius="217dp"
                android:startColor="#00FFFFFF"
                android:centerColor="#00FFFFFF"
                android:endColor="@color/dark"
                android:centerX="1"
                android:centerY="1"/>
        </shape>

    </item>

    <item
        android:width="132dp"
        android:gravity="end">

        <shape android:shape="oval">
            <gradient
                android:type="radial"
                android:gradientRadius="217dp"
                android:startColor="#00FFFFFF"
                android:centerColor="#00FFFFFF"
                android:endColor="@color/dark"
                android:centerX="0"
                android:centerY="0"/>
        </shape>

    </item>

    <item
        android:id="@+id/circleLayer"
        android:start="13dp"
        android:top="13dp"
        android:end="13dp"
        android:bottom="13dp">

        <shape android:shape="oval">
            <solid android:color="#FFFFFF" />
            <corners android:radius="51dp" />

        </shape>

    </item>

    <item
        android:start="11dp"
        android:top="11dp"
        android:end="11dp"
        android:bottom="11dp">

        <shape android:shape="oval">
            <solid android:color="#D6D6D6" />
            <corners android:radius="51dp" />

        </shape>

    </item>

</layer-list>