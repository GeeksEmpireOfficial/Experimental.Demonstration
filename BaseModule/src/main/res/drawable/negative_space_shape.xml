<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:id="@+id/canvasLayer"
        android:height="91dp"
        android:width="403dp"
        android:gravity="center">

        <color
            android:color="@color/transparent" />

    </item>

    <item
        android:id="@+id/backgroundLayer"
        android:height="77dp"
        android:width="399dp"
        android:gravity="center">

        <shape>
            <corners
                android:radius="19dp" />

            <gradient
                android:startColor="@color/red"
                android:endColor="@color/white"
                android:centerY="0.50"
                android:centerX="0.50"
                android:angle="135" />
        </shape>

    </item>

    <item
        android:id="@+id/foregroundLayer"
        android:height="73dp"
        android:width="395dp"
        android:gravity="center">

        <shape>
            <corners
                android:radius="17dp" />

            <gradient
                android:startColor="@color/white"
                android:endColor="@color/default_color_light"
                android:centerY="0.50"
                android:centerX="0.50"
                android:angle="135" />
        </shape>

    </item>

    <item
        android:id="@+id/clearLayer"
        android:height="73dp"
        android:width="73dp"
        android:bottom="7dp"
        android:gravity="end|bottom">

        <shape android:shape="rectangle">

            <corners
                android:topLeftRadius="99dp"
                android:topRightRadius="99dp"
                android:bottomLeftRadius="99dp"
                android:bottomRightRadius="19dp"/>

            <solid
                android:color="@color/black"/>

        </shape>

    </item>

    <item
        android:id="@+id/circleLayer"
        android:height="51dp"
        android:width="51dp"
        android:top="17dp"
        android:gravity="center_horizontal">

        <shape android:shape="oval">

            <gradient
                android:startColor="@color/white"
                android:endColor="@color/default_color_light"
                android:centerY="0.50"
                android:centerX="0.50"
                android:angle="135" />
        </shape>

    </item>

    <item
        android:id="@+id/rippleMaskCircle"
        android:height="51dp"
        android:width="51dp"
        android:gravity="center">

        <ripple
            android:color="@color/pink">

            <item
                android:id="@android:id/mask">

                <shape android:shape="oval">

                    <solid android:color="@color/pink" />

                </shape>

            </item>

        </ripple>

    </item>

    <!-- Shadow -->
    <item
        android:id="@+id/ringLayerShadow"
        android:height="51dp"
        android:width="51dp"
        android:start="79dp"
        android:gravity="center_vertical">

        <shape
            android:shape="ring"
            android:angle="0"
            android:innerRadiusRatio="2.3"
            android:thicknessRatio="20.0"
            android:type="sweep"
            android:useLevel="false">

            <gradient
                android:startColor="@color/red"
                android:endColor="@color/default_color_light"
                android:centerY="0.50"
                android:centerX="0.50"
                android:angle="135" />
        </shape>

    </item>

    <item
        android:id="@+id/ringLayer"
        android:height="51dp"
        android:width="51dp"
        android:start="59dp"
        android:gravity="center_vertical">

        <shape
            android:shape="ring"
            android:angle="0"
            android:innerRadiusRatio="2.3"
            android:thicknessRatio="20.0"
            android:type="sweep"
            android:useLevel="false">

            <gradient
                android:startColor="@color/red"
                android:endColor="@color/default_color_light"
                android:centerY="0.50"
                android:centerX="0.50"
                android:angle="135" />
        </shape>

    </item>

</layer-list>
