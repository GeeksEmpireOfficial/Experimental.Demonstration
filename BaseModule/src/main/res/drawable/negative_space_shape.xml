<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:id="@+id/backgroundLayer"
        android:height="77dp"
        android:width="399dp"
        android:gravity="center">

        <shape>
            <corners
                android:radius="19dp" />

            <gradient
                android:startColor="@color/premiumLight"
                android:endColor="@color/white"
                android:centerY="0.50"
                android:centerX="0.50"
                android:angle="135" />
        </shape>

    </item>

    <item
        android:id="@+id/foregroundLayer"
        android:height="73dp"
        android:width="395dp"
        android:gravity="center">

        <shape>
            <corners
                android:radius="17dp" />

            <gradient
                android:startColor="@color/white"
                android:endColor="@color/premiumLight"
                android:centerY="0.50"
                android:centerX="0.50"
                android:angle="135" />
        </shape>

    </item>

    <item
        android:id="@+id/clearLayer"
        android:height="66dp"
        android:width="66dp"
        android:gravity="center">

        <shape android:shape="rectangle">

            <corners
                android:topLeftRadius="99dp"
                android:topRightRadius="99dp"
                android:bottomLeftRadius="99dp"
                android:bottomRightRadius="19dp"/>

            <solid
                android:color="@color/pink"/>

        </shape>

    </item>

    <item
        android:height="51dp"
        android:width="51dp"
        android:gravity="center">

        <shape android:shape="oval">

            <gradient
                android:startColor="@color/white"
                android:endColor="@color/premiumLight"
                android:centerY="0.50"
                android:centerX="0.50"
                android:angle="135" />
        </shape>

    </item>

</layer-list>
